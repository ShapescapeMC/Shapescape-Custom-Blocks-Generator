{
	"namespace": "shapescape",
	"blocks": {
		"custom_geo_attacahble_block": {
			// This is a full example of a block that shows all features
			// together
			"translation": "{frame} Chair With {cushion} Cushion",
			"rotation_type": "rotate_front_both",
			"sound": "wood",
			"block_entity_properties": {
				"spawn_egg_texture": "example_texture",
				"attachable": {
					"offset": {
						// The offset defines an animation that constantly plays on the attachable
						// in order to place it in the player's hand. The best way to implement this
						// is to skip this and just use the defaults. Example below probably wouldn't
						// work well.

						// The transformations of the block in the player's hand in 1st person
						"position_1st_person": [0, 0, 0],
						"rotation_1st_person": [0, 0, 0],
						"scale_1st_person": [1, 1, 1],
						// The transformations of the block in the player's hand in 3rd person
						"position_3rd_person": [0, 0, 0],
						"rotation_3rd_person": [0, 0, 0],
						"scale_3rd_person": [1, 1, 1]
					},
					"assets": {
						// Valid inputs
						// - "TERRAIN_TEXTURE:<texture name>" - find <texture name> in terrain_texture.json
						// - <texture path> - path to the texture file relative to this file
						// - an object with "north", "south", "east", "west", "up", "down" keys.
						// each key is a texture
						//
						// IMPORTANT NOTE: If the value is an object, then the variants defined below
						// can override each key individually. If the value is a string, then the
						// actual path used for each variant is generated bu appending the variant
						// suffixes to the string.
						"texture": "TERRAIN_TEXTURE:chair",

						// An identifier of an existing geometry file. Can be overriden by variants.
						// note that the identifier names aren't generated by appending the variant
						// suffixes.
						"geometry": "geometry.chair"
					}
				},
				"place_sound": "use.stone"
			},
			"block_template": "block_template.block.json",
			"block_template_override": {
				"components": {
					"minecraft:geometry": "geometry.chair",
					"minecraft:material_instances": {
						"*": {
							"texture": "chair",
							"render_method": "alpha_test"
						},
						"cushion": {
							"texture": "chair",
							"render_method": "alpha_test"
						}
					}
				}
			},
			"shared_variant": {
				"minecraft:material_instances": {
					"*": {
						"texture": "chair",
						"render_method": "alpha_test"
					},
					"cushion": {
						"texture": "chair",
						"render_method": "alpha_test"
					}
				}
			},
			"variants": {
				"material": [
					{
						"translation": "Crimson",
						"id_suffix": "c",
						"shared_variant": {
							"minecraft:material_instances": {
								"*": {
									"texture": "chair_red"
								}
							}
						},
						"block_entity_properties": {
							"attachable": {
								"assets": {
									// This overwrites the texture used by this block variant
									"texture": "TERRAIN_TEXTURE:chair_red"
								}
							}
						}
					},
					{
						"translation": "Warped",
						"id_suffix": "w",
						"shared_variant": {
							"minecraft:material_instances": {
								"*": {
									"texture": "chair_blue"
								}
							}
						}
					}
				]
			}
		},
		"cubic_geo_attachable_block": {
			"translation": "Cubic geo attachable block",
			"sound": "stone",
			"rotation_type": "rotate_front_both",
			"block_entity_properties": {
				"spawn_egg_texture": "example_texture",
				"attachable": {
					"assets": {
						"texture": {
							"north": "RP:textures/blocks/front",
							"south": "RP:textures/blocks/side",
							"east": "RP:textures/blocks/side",
							"west": "RP:textures/blocks/side",
							"up": "RP:textures/blocks/top",
							"down": "RP:textures/blocks/bottom"
						}
					}
				},
				"place_sound": "use.stone"
			},
			"block_template": "block_template.block.json",
			"block_template_override": {
				"components": {
					"minecraft:map_color": "#985c44",
					"minecraft:geometry": "geometry.full_block",
					"minecraft:material_instances": {
						"*": {
							"texture": "hardened_clay_{variant}",
							"render_method": "alpha_test"
						},
						"up": {
							"texture": "hardened_clay",
							"render_method": "alpha_test"
						},
						"down": {
							"texture": "hardened_clay",
							"render_method": "alpha_test"
						}
					}
				}
			}
		}
	}
}
